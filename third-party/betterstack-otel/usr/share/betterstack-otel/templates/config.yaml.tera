# This file is automatically generated by simconf/debconf
# If you wish to change it, you must run "dpkg-reconfigure betterstack-otel"

receivers:
  otlp:
    protocols:
      grpc:
        endpoint: 0.0.0.0:4317
      http:
        endpoint: 0.0.0.0:4318

exporters:
  otlphttp/betterstack:
    endpoint: "https://{{ get_answer(q="betterstack-otel/ingest_host") }}"
    headers:
      Authorization: "Bearer {{ get_answer(q="betterstack-otel/source_token") }}"

processors:
  batch:

service:
  pipelines:
    metrics/betterstack:
      receivers: [otlp]
      processors: [batch]
      exporters: [otlphttp/betterstack]
    logs/betterstack:
      receivers: [otlp]
      processors: [batch]
      exporters: [otlphttp/betterstack]